            android:layout_height="wrap_content"
            android:text="打开app" />

        <Button
            android:id="@+id/btn14_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开app设置详情" />

        <ImageView
            android:id="@+id/iv2_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn15_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取app详情" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
