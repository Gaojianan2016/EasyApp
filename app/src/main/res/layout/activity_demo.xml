            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AppExt"
            android:textAppearance="@style/Text_Title" />

        <Button
            android:id="@+id/btn11_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安装app" />

        <Button
            android:id="@+id/btn12_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卸载app" />

        <Button
            android:id="@+id/btn13_ad"
