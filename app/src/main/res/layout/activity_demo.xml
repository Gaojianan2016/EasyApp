<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nsv_ad"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ActivityExt"
            android:ellipsize="end"
            android:textAppearance="@style/Text_Title" />

        <Button
            android:id="@+id/btn1_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="share_1"
            android:text="跳转动画打开新页面" />

        <Button
            android:id="@+id/btn2_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="share_2"
            android:text="转场动画打开新页面" />

        <Button
            android:id="@+id/btn3_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="share_3"
            android:text="转场动画打开新页面2" />

        <EditText
            android:id="@+id/soft_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn4_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="判断是否开启软键盘" />

